<!DOCTYPE html>

<!-- login.ejs요소와 signIn.ejs 맞추기.-->

<html>

<head>
	<title>Register Login with Authentication</title>
	<!-- Custom Theme files -->
	<link href="/css/style3.css" rel="stylesheet" type="text/css" media="all" />
	<% include ../partials/head %>
</head>

<body>

	<div class="container">
		<!--<form action="/action_page.php">-->
		<form action="/login" method="post">
			<div class="row">
				<div style="text-align:center; padding-top: 4rem; font-weight: bold; font-size: 2rem;" class="col">Login for user</div>

				<div class="col" style="padding-top: 2rem;">
					<a href="#" class="fb btn">
						<i class="fa fa-facebook fa-fw"></i> Login with Facebook
					</a>

					<a href="#" class="google btn">
						<i class="fa fa-google fa-fw"></i> Login with Google+
					</a>
				</div>

				<div class="col" style="padding-left: 2rem;">

					<!--
					<input type="text" name="logemail" placeholder="Email" required>
					<input type="password" name="logpassword" placeholder="Password" required>
					<input type="submit" value="Login">
					
					-->
					<div class="form-group <%= (errors.username)?'has-error':'' %>">
						<label for="username" class="col-sm-3 control-label">Username</label>
						<div class="col-md-12">
							<input class="form-control" type="text" id="username" name="username" value="<%= username %>">
							<% if(errors.username){ %>
							<span class="help-block">
								<%= errors.username %></span>
							<% } %>
						</div>
					</div>

					<div class="form-group <%= (errors.password)?'has-error':'' %>">
						<label for="password" class="col-sm-3 control-label">Password</label>
						<div class="col-md-12">
							<input class="form-control" type="password" id="password" name="password" value="">
							<% if(errors.password){ %>
							<span class="help-block">
								<%= errors.password %></span>
							<% } %>
						</div>
					</div>
				</div>

<!-- master.css 수정 -->
				<div class="buttons col-2" style="padding-right: 2rem;">
					<input class="btn btn-default" style="margin-top: 5rem;" type="submit" value="Login">
				</div>
				<div class="col-2" style="margin-top: 4.6rem;">
					<a class="btn btn-secondary" href="/" role="button" >Back</a>
				</div>

			</div>
		</form>
	</div>

	<div class="bottom-container">
		<div class="row">
			<div class="col">
				<a href="users/new" style="color:white" class="btn">Sign up</a>
			</div>
			<div class="col">
				<a href="#" style="color:white" class="btn">Forgot password?</a>
			</div>
		</div>
	</div>


</body>
